<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF0B4"
    tools:context=".EsTehActivity">

    <ImageView
        android:id="@+id/teh_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        />

    <ImageView
        android:id="@+id/teh_img2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/teh_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es Teh"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/teh_img1"
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/teh_img3"
        android:layout_width="240dp"
        android:layout_height="286dp"
        android:src="@drawable/teh"
        android:layout_below="@+id/teh_txt1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/teh_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es teh adalah minuman teh yang disajikan dingin dengan es batu."
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_below="@+id/teh_img3"
        android:fontFamily="@font/poppinsregular"
        />

    <TextView
        android:id="@+id/teh_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RP. 4.000"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/teh_txt2"
        android:paddingTop="10dp"
        />

    <EditText
        android:id="@+id/nama_teh"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:hint="Nama Pemesan"
        android:paddingLeft="25dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@+id/teh_txt3"
        />

    <Button
        android:id="@+id/btn_teh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_teh"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:width="200dp"
        android:background="@drawable/button_shape"
        android:text="Pesan Sekarang"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/teh_img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="-18dp"
        android:layout_marginBottom="-22dp"
        android:src="@drawable/gambar3"
        />

</RelativeLayout>
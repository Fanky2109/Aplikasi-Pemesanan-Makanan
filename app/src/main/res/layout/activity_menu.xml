<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF0B4"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/m_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        />

    <ImageView
        android:id="@+id/m_img2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:src="@drawable/ic_back"
        />

    <ImageView
        android:id="@+id/m_img3"
        android:layout_width="142dp"
        android:layout_height="139dp"
        android:layout_below="@+id/m_img1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_food"
        />

    <TextView
        android:id="@+id/m_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Makanan dan Minuman"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        android:layout_below="@+id/m_img3"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/m_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depot Mak Ijah"
        android:layout_below="@+id/m_txt1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsmedium"
        />

    <Button
        android:id="@+id/m_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_txt2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:text="Nasi Goreng"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/m_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_btn1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:text="Nasi Pecel"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/m_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_btn2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:text="Es teh"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/m_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_btn3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:text="Es Jeruk"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/m_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_btn4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:text="Daftar Order"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:backgroundTint="@color/Red"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/nasi_img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="-18dp"
        android:layout_marginBottom="-22dp"
        android:src="@drawable/gambar3" />

</RelativeLayout>